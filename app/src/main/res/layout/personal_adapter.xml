<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/yellow"
    android:padding="@dimen/padding_design_main"
    android:layout_margin="@dimen/margins_et_newnotes"
    app:cardCornerRadius="@dimen/corner_radius_adapter">

    <!-- Xml till Adaptern -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_adapter"
        android:padding="@dimen/padding_design_main"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_textsize_adapter"
        android:textStyle="bold"
        tools:text="Titel"/>



</androidx.cardview.widget.CardView>